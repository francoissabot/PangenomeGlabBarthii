isbn = {1365-294X (Electronic)$\backslash$r0962-1083 (Linking)},
issn = {1365294X},
journal = {Molecular Ecology},
keywords = {Oryza glaberrima,RNA-seq,bottleneck,cost of domestication,domestication,nucleotide diversity,rice,riz},
