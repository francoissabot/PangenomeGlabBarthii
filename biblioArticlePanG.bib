issn = {1756-0500},
journal = {BMC research notes},
keywords = {comparative genomics,haploid,illumina,indel,ion pgm,ngs,outils,phylogeny,pipeline,snp,variant calling},
mendeley-tags = {outils},
number = {1},
pages = {618},
